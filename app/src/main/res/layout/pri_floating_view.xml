<?xml version="1.0" encoding="utf-8"?>
<com.pri.recordview.view.TouchFloatViewContain xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contains"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pri_record_bg"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_record_icon"
        android:layout_width="@dimen/touch_float_text_view_width"
        android:layout_height="@dimen/touch_float_text_view_height"
        android:background="@drawable/app_item_icon" />

    <LinearLayout
        android:id="@+id/ll_record_time"
        android:layout_width="@dimen/touch_float_text_view_width"
        android:layout_height="@dimen/touch_float_text_view_height"
        android:background="@drawable/oval_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/pri_colorBg"
            android:textSize="12dp" />
    </LinearLayout>

</com.pri.recordview.view.TouchFloatViewContain>